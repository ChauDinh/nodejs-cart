extends ../layout/common.pug
block content
  h1 Register

  if errors
    each error in errors
      .alert.alert-danger= error

  form(method="POST", action="/users/create", enctype="multipart/form-data")
    .form-group
      label(for="username") Username
      input#name.form-control(name="username", type="text", value=values ? values.username : '')
    .form-group 
      label(for="password") Password
      input#password.form-control(name="password", type="password", value=values ? values.password : '')
    .form-group
      label(for="email") Email
      input#email.form-control(name="email", type="text", value=values ? values.email : '')
    .form-group
      label(for="avatar") Avatar
      input#avatar.form-control-file(name="avatar", type="file")

    button.btn.btn-primary Register